<%- include ('partials/_header.ejs') %>
<!-- slider section -->
<div class="slider_section">
  

  <div
    id="carouselExampleControls"
    class="carousel slide"
    data-ride="carousel"
  >
    <div class="carousel-inner">
      <div class="carousel-item active">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-6 offset-lg-1">
              <div class="detail-box">
                <div class="heading_box">
                  <h2 style="font-size: 40px !important; color: white !important;"><%= user.name %></h2>
                  <h1 style="font-size: 55px !important; color: gold !important;">Group H</h1>
                </div>
                <div class="mt-5">
                  <a href="/<%= user.slug %>" class="m-3" style="color: white !important;">
                    My CV
                  </a>
                  <a href="/projects/<%= user.slug %>" class="m-3" style="color: white !important;">
                    My Projects
                  </a>
                </div>
              </div>
            </div>
            <div class="col-lg-5 px-0">
              <div class="img-box">
                <% if (user.name === "Tansel Berkant Oflaz") { %>
                  <img src="/images/slider-img.png" alt="" />
                <% } else if(user.name === "Kemal Yanmaz") { %>
                  <img src="/images/slider-img2.png" alt="" />
                <% }%>         
              </div>
            </div>
          </div>
        </div>
      </div>

      <% for(let i =0; i < user.posts.length; i++) { %>

        <div class="carousel-item ">
          <div class="container-fluid">
            <div class="row">
              <div class="col-lg-6 offset-lg-1">              
                  <div class="heading_box">
                    <h5 class="text-warning"><%= user.posts[i].name %></h5>                  
                    <p class="text-white" style="font-weight: 700 !important;">Subject: <%= user.posts[i].subject %></p>
                    <p class="text-white"><%= user.posts[i].content %></p>
                    <a class="btn btn-outline-warning" href="<%= user.posts[i].postlink %>">Postlink</a>
                    
                  </div>                              
              </div>
              <div class="col-lg-5 px-0">
                <div class="img-box">
                  <% if (user.name === "Tansel Berkant Oflaz") { %>
                    <img src="/images/slider-img.png" alt="" />
                  <% } else if(user.name === "Kemal Yanmaz") { %>
                    <img src="/images/slider-img2.png" alt="" />
                  <% }%>         
                </div>
              </div>
            </div>
          </div>
        </div>
  
      <% } %>


      
    </div>
  </div>
  <div class="slider_btn-container">
    <a
      class="carousel-control-prev"
      href="#carouselExampleControls"
      role="button"
      data-slide="prev"
    >
      <span class="sr-only">Previous</span>
    </a>
    <a
      class="carousel-control-next"
      href="#carouselExampleControls"
      role="button"
      data-slide="next"
    >
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<!-- end slider section -->
</div>
<!-- end hero area -->

<%- include ('partials/_footer.ejs') %>